<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Recipe Image -->
        <ImageView
            android:id="@+id/recipeImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:background="@color/cardview_shadow_end_color"
            android:contentDescription="Recipe Image" />

        <!-- Favorite/Unfavorite Button -->
        <ImageButton
            android:id="@+id/btnRecipeFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/favorite"
            app:tint="@color/black"
            android:contentDescription="Favorite Button" />

        <!-- Recipe Title -->
        <TextView
            android:id="@+id/recipeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipe Title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <!-- Recipe Description -->
        <TextView
            android:id="@+id/recipeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipe Description"
            android:textSize="16sp"
            android:textColor="@color/primary"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Recipe Tags -->
        <TextView
            android:id="@+id/recipeTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tags: Dinner, Healthy, Protein-rich"
            android:textSize="14sp"
            android:textColor="@color/primary"
            android:layout_marginBottom="16dp" />

        <!-- Card for Ingredients -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/cardview_shadow_end_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Ingredients Header -->
                <TextView
                    android:id="@+id/ingredientsHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ingredients"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <!-- Ingredients List -->
                <TextView
                    android:id="@+id/recipeIngredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Ingredient 1\n• Ingredient 2\n• Ingredient 3"
                    android:textSize="14sp"
                    android:textColor="@color/primary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card for Instructions -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/cardview_shadow_end_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Instructions Header -->
                <TextView
                    android:id="@+id/instructionsHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Instructions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="8dp" />

                <!-- Instructions List -->
                <TextView
                    android:id="@+id/recipeInstructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Step one...\n2. Step two...\n3. Step three..."
                    android:textSize="14sp"
                    android:textColor="@color/primary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Cooking Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Preparation Time -->
            <TextView
                android:id="@+id/preparationTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Prep: 10 mins"
                android:textSize="14sp"
                android:textColor="@color/primary"
                android:gravity="center_horizontal" />

            <!-- Cooking Time -->
            <TextView
                android:id="@+id/cookingTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cook: 15 mins"
                android:textSize="14sp"
                android:textColor="@color/primary"
                android:gravity="center_horizontal" />

            <!-- Servings -->
            <TextView
                android:id="@+id/servings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Servings: 2"
                android:textSize="14sp"
                android:textColor="@color/primary"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <!-- Buttons Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnDetailBack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Back" />

            <Button
                android:id="@+id/btnUpdateRecipe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="Update" />

            <Button
                android:id="@+id/btnDeleteRecipe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Delete" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
